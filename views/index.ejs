<%- include('layout/header') %>
<%- include('layout/navbar') %>

<div class="container my-5">
  <!-- Hero Section -->
  <div class="jumbotron bg-light p-5 rounded text-center mb-5">
    <h1 class="display-4">
      <i class="fas fa-gavel text-primary"></i> Hệ Thống Đấu Giá Trực Tuyến
    </h1>
    <p class="lead">Tham gia đấu giá và giành được những món đồ yêu thích của bạn!</p>
    <hr class="my-4">
    <% if (!user) { %>
      <p class="mb-3">Đăng ký ngay để bắt đầu đấu giá</p>
      <a class="btn btn-primary btn-lg mx-2" href="/register" role="button">
        <i class="fas fa-user-plus"></i> Đăng ký
      </a>
      <a class="btn btn-outline-primary btn-lg mx-2" href="/login" role="button">
        <i class="fas fa-sign-in-alt"></i> Đăng nhập
      </a>
    <% } else { %>
      <a class="btn btn-primary btn-lg" href="/dashboard" role="button">
        <i class="fas fa-th-large"></i> Vào Dashboard
      </a>
    <% } %>
  </div>

  <!-- Features -->
  <div class="row mb-5">
    <div class="col-md-4 text-center">
      <i class="fas fa-clock fa-3x text-primary mb-3"></i>
      <h3>Đấu giá Real-time</h3>
      <p>Cập nhật giá tức thì, không bị bỏ lỡ bất kỳ cơ hội nào</p>
    </div>
    <div class="col-md-4 text-center">
      <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
      <h3>An toàn & Bảo mật</h3>
      <p>Thông tin của bạn được bảo vệ tuyệt đối</p>
    </div>
    <div class="col-md-4 text-center">
      <i class="fas fa-trophy fa-3x text-warning mb-3"></i>
      <h3>Công bằng & Minh bạch</h3>
      <p>Mọi giao dịch đều được ghi nhận và theo dõi</p>
    </div>
  </div>

  <!-- Active Auctions -->
  <h2 class="mb-4">
    <i class="fas fa-fire text-danger"></i> Đấu giá đang diễn ra
  </h2>

  <% if (auctions && auctions.length > 0) { %>
    <div class="row">
      <% auctions.forEach(function(auction) { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= auction.title %></h5>
              <p class="card-text text-muted"><%= auction.description ? auction.description.substring(0, 100) + '...' : 'Không có mô tả' %></p>
              <hr>
              <p class="mb-2">
                <strong>Giá hiện tại:</strong>
                <span class="text-success"><%= parseFloat(auction.current_price).toLocaleString('vi-VN') %> VNĐ</span>
              </p>
              <p class="mb-2">
                <strong>Người dẫn đầu:</strong>
                <%= auction.highestBidder ? auction.highestBidder.username : 'Chưa có' %>
              </p>
              <p class="mb-3">
                <strong>Trạng thái:</strong>
                <span class="badge bg-success">Đang diễn ra</span>
              </p>
              <% if (user) { %>
                <a href="/auction/<%= auction.auction_id %>" class="btn btn-primary w-100">
                  <i class="fas fa-gavel"></i> Xem & Đấu giá
                </a>
              <% } else { %>
                <a href="/login" class="btn btn-outline-primary w-100">
                  <i class="fas fa-sign-in-alt"></i> Đăng nhập để đấu giá
                </a>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      <i class="fas fa-info-circle"></i> Hiện tại chưa có phiên đấu giá nào đang diễn ra.
    </div>
  <% } %>
</div>

<%- include('layout/footer') %>
